{
  "name": "m-fe-rtw",
  "version": "0.0.1",
  "description": "Micro-Frontend Boilerplate, with React & TS & Webpack",
  "repository": {
    "type": "git",
    "url": "https://github.com/wx-chevalier/m-fe-rtw"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "redux",
    "mobx",
    "webpack",
    "typescript"
  ],
  "author": "wx-chevalier@github",
  "private": true,
  "workspaces": [
    "packages/rtw-core",
    "packages/rtw-bootstrap",
    "packages/rtw-components",
    "packages/rtw-host-app"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "lint-staged": {
    "*.{ts,tsx,scss,less,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "scripts": {
    "postinstall": "node ./node_modules/husky/lib/installer/bin install",
    "bootstrap": "yarn install && yarn run build",
    "build": "npm run clean && yarn workspaces run build",
    "clean": "yarn workspaces run clean",
    "cleanCov": "rimraf @coverage",
    "dev": "echo Please start in packages/rtw-host-app",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "lint-staged": "lint-staged",
    "prettier-all": "prettier --write 'src/**/*' '!src/{assets,datas}/**'",
    "start": "./scripts/tools/start_mono.sh",
    "start:m-fe": "./scripts/tools/start_micro.sh",
    "test": "jest --config ./scripts/jest/jest.config.js",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm run cleanCov && npm test -- --coverage",
    "upgrade": "./scripts/tools/upgrade_pkgs.sh"
  },
  "devDependencies": {
    "@types/jest": "24.0.18",
    "@types/react-dom": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "autoprefixer": "9.6.1",
    "awesome-typescript-loader": "^5.2.1",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.2.2",
    "eslint-loader": "3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "file-loader": "4.2.0",
    "fork-ts-checker-webpack-plugin": "^1.5.0",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-template": "^6.2.0",
    "husky": "^3.0.4",
    "jest": "24.9.0",
    "jest-cli": "24.9.0",
    "jest-fetch-mock": "^2.1.2",
    "json-server": "0.15.0",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "lint-staged": "^9.2.5",
    "mini-css-extract-plugin": "^0.8.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "parallelshell": "^3.0.2",
    "postcss-loader": "3.0.0",
    "react-hot-loader": "^4.12.11",
    "resolve-url-loader": "3.1.0",
    "rimraf": "^3.0.0",
    "style-loader": "1.0.0",
    "terser-webpack-plugin": "^1.4.1",
    "ts-import-plugin": "^1.6.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "6.0.4",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "3.5.3",
    "uglifyjs-webpack-plugin": "2.2.0",
    "url-loader": "^2.1.0",
    "wasm-loader": "^1.3.0",
    "webpack": "^4.39.2",
    "webpack-cli": "3.3.7",
    "webpack-dashboard": "3.0.7",
    "webpack-dev-server": "^3.8.0",
    "webpack-theme-color-replacer": "^1.2.17",
    "workerize-loader": "^1.1.0"
  }
}
