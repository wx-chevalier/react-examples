{
  "extends": ["@wx-fc/tslint-config/react", "tslint-config-eslint/prettier"],
  "rules": {
    "jsx-no-lambda": false,
    "ordered-imports": [
      true,
      {
        "grouped-imports": true,
        "import-sources-order": "lowercase-first",
        "named-imports-order": "lowercase-last",
        "groups": [
          "^(?!rm-)(@[^/]|[^@.])",
          "^(@/|rm-)",
          "^(../)+",
          "^(?!\\./.*\\.less)"
        ]
      }
    ]
  },
  "linterOptions": {
    "exclude": ["**/*.d.ts"]
  }
}
